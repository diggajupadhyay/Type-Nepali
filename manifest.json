{
  "manifest_version": 2,
  "name": "Nepali Typing Extension",
  "version": "1.0",
  "description": "A Firefox extension to help with Nepali typing.",
  "icons": {
    "48": "img/icons/icon-48.png",
    "96": "img/icons/icon-96.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "img/icons/icon-48.png",
    "default_popup": "popup.html",
    "default_title": "Toggle Nepali Typing"
  },
  "commands": {
    "toggle-feature": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Toggle Nepali Typing"
    }
  }
}
